<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kryguu.timer.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="50dp"
        android:id="@+id/colon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp" />

    <TextView
        android:text="0"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSecond1"
        android:layout_alignBaseline="@+id/colon"
        android:layout_alignBottom="@+id/colon"
        android:layout_toEndOf="@+id/colon" />

    <TextView
        android:text="0"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSecond2"
        android:layout_alignBaseline="@+id/textViewSecond1"
        android:layout_alignBottom="@+id/textViewSecond1"
        android:layout_toEndOf="@+id/textViewSecond1" />

    <TextView
        android:text="0"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMinute2"
        android:layout_alignBaseline="@+id/colon"
        android:layout_alignBottom="@+id/colon"
        android:layout_toStartOf="@+id/colon" />

    <TextView
        android:text="0"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMinute1"
        android:layout_alignBaseline="@+id/textViewMinute2"
        android:layout_alignBottom="@+id/textViewMinute2"
        android:layout_toStartOf="@+id/textViewMinute2" />

    <Button
        android:text="+"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonPlusMinute2"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_above="@+id/textViewMinute2"
        android:layout_toEndOf="@+id/textViewMinute1" />

    <Button
        android:text="+"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonPlusSecond1"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_above="@+id/textViewSecond1"
        android:layout_toStartOf="@+id/textViewSecond2" />

    <Button
        android:text="+"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonPlusSecond2"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_above="@+id/textViewSecond2"
        android:layout_toEndOf="@+id/textViewSecond1" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonMinusMinute1"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_below="@+id/textViewMinute1"
        android:layout_toStartOf="@+id/textViewMinute2" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonMinusMinute2"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_below="@+id/textViewMinute2"
        android:layout_toEndOf="@+id/textViewMinute1" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonMinusSecond1"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_below="@+id/textViewSecond1"
        android:layout_toStartOf="@+id/textViewSecond2" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonMinusSecond2"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_below="@+id/textViewSecond2"
        android:layout_toEndOf="@+id/textViewSecond1" />

    <Button
        android:text="+"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonPlusMinute1"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_above="@+id/textViewMinute1"
        android:layout_toStartOf="@+id/textViewMinute2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/buttonMinusMinute1"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_below="@+id/buttonMinusMinute1"
            android:layout_alignParentStart="true"
            android:id="@+id/buttonStart" />

        <Button
            android:text="@string/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:layout_alignTop="@+id/buttonStart"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonPause" />

        <Button
            android:text="@string/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/buttonPause"
            android:layout_alignParentEnd="true"
            android:id="@+id/buttonStop" />

    </LinearLayout>

</RelativeLayout>
